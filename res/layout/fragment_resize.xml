<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_height="match_parent" tools:context="com.integraloftan.justin.puzzlegame.Resize">

    <TextView
        android:layout_weight="1"
        android:text="@string/resizefirststring"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/resizedemotimesonecopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/resizedemotimesonepointfivecopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/resizedemotimestwocopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_weight="1"
        android:text="@string/resizesecondstring"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/noresize2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:adjustViewBounds="true"
            android:layout_weight="1"
            android:src="@drawable/noresize1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>
